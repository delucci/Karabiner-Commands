{
  "title": "Sleep Mac with left_command+left_option+delete",
  "rules": [
    {
      "description": "Sleep the Mac when left_command+left_option+delete is pressed",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": ["left_command", "left_option"]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"System Events\" to sleep'"
            }
          ]
        }
      ]
    }
  ]
}
