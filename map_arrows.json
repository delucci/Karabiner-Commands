{
  "title": "Custom Arrow Keys with left_option+{;./_}",
  "rules": [
    {
      "description": "Map left_option+{;./_} to Arrow Keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "slash",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "international1",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["left_shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "slash",
            "modifiers": {
              "mandatory": ["left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["left_shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "international1",
            "modifiers": {
              "mandatory": ["left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_shift"]
            }
          ]
        }
      ]
    }
  ]
}
